<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:id="@+id/profile_photo"
                android:layout_marginTop="20dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                android:src="@drawable/profileuser"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:id="@+id/relChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_photo"
                android:gravity="center_horizontal"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/pencil"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_pencil"
                    />
                <TextView
                    android:paddingLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Photo"
                    android:id="@+id/changeProfilePhoto"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/pencil"
                    android:textColor="@color/blue"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/relChange"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="60dp"
                android:background="@color/blue"
                android:id="@+id/relative1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/name"
                    android:paddingLeft="6dp"
                    android:paddingRight="2dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/backgroundborder2"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/name"
                    android:hint="Name"
                    android:paddingLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="63dp"
                    android:background="@drawable/backgroundborder"
                    android:inputType="textNoSuggestions"
                    android:layout_marginRight="20dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/blue"
                android:layout_marginTop="15dp"
                android:id="@+id/relative2">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/password"
                    android:paddingLeft="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/backgroundborder2"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/password"
                    android:layout_centerVertical="true"
                    android:hint="Password"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="63dp"
                    android:background="@drawable/backgroundborder"
                    android:inputType="textPassword"
                    android:layout_marginRight="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/blue"
                android:layout_marginTop="15dp"
                android:id="@+id/relative3">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_email"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/backgroundborder2"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/email"
                    android:layout_centerVertical="true"
                    android:hint="Email"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="63dp"
                    android:background="@drawable/backgroundborder"
                    android:inputType="textPassword"
                    android:layout_marginRight="20dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/blue"
                android:layout_marginTop="15dp"

                android:id="@+id/relative4">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/phone"
                    android:paddingLeft="4dp"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="2dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/backgroundborder2"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/contact"
                    android:layout_centerVertical="true"
                    android:hint="Mobile No."
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="63dp"
                    android:background="@drawable/backgroundborder"
                    android:inputType="textPassword"
                    android:layout_marginRight="20dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/relative4"
                android:background="@color/green">

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</merge>