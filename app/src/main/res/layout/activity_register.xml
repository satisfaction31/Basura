<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="officialsuzuen.google.com.trasearch.Login.Register"
    android:padding="20dp"
    android:background="@color/blue">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linLayout1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/white2">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="85dp"
                    android:src="@drawable/ts"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_below="@+id/linLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create an account"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_below="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/registerImg1"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user"
                    android:padding="5dp"
                    android:background="@drawable/backgroundborder2"/>

                <EditText
                    android:id="@+id/registerEt1"
                    android:layout_toRightOf="@+id/registerImg1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/backgroundborder"
                    android:hint="Choose a username"
                    android:textSize="17sp"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="2dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout3"
                android:layout_below="@id/relLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/registerImg2"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:src="@drawable/password"
                    android:padding="5dp"
                    android:background="@drawable/backgroundborder2"/>

                <EditText
                    android:id="@+id/registerEt2"
                    android:layout_toRightOf="@+id/registerImg2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/backgroundborder"
                    android:hint="Create a password"
                    android:textSize="17sp"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="2dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout4"
                android:layout_below="@id/relLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/registerImg3"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:src="@drawable/password"
                    android:padding="5dp"
                    android:background="@drawable/backgroundborder2"/>

                <EditText
                    android:id="@+id/registerEt3"
                    android:layout_toRightOf="@+id/registerImg3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/backgroundborder"
                    android:hint="Confirm your password"
                    android:textSize="17sp"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="2dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout5"
                android:layout_below="@id/relLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/registerImg4"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_email"
                    android:padding="5dp"
                    android:background="@drawable/backgroundborder2"/>

                <EditText
                    android:id="@+id/registerEt4"
                    android:layout_toRightOf="@+id/registerImg4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/backgroundborder"
                    android:hint="Enter your email address"
                    android:textSize="17sp"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="2dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout6"
                android:layout_below="@id/relLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp">

                <Button
                    android:id="@+id/regbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttondesign"
                    android:text="Create account"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout7"
                android:layout_below="@id/relLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp">

                <TextView
                    android:id="@+id/registerTx1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Return to login"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </RelativeLayout>

        </RelativeLayout>
        <ProgressBar
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/registerProgressBar"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>
